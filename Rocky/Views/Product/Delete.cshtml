@model Rocky.Models.Product


@*форма с пост методом который будет использовать экшен Create из контролера, enctype для изображений *@
<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info p1-3">Delete product</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">  
                                <button type="submit" class="btn-danger btn w-100" value="Delete"/>Delete</button>
                        </div>

                        <div class="col">
                            <a class="btn-success btn w-100" asp-action="Index">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @*empty*@

                    @if(@Model.Id != 0)
                    {
                        <img src="@WC.ImagePath@Model.Image" class="w-100" style="border-radius:5px; border:1px solid #bbb"/>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial" />
 //Валидация на стороне клиента
    }

<script>
    $(document).ready(function() {
        $('.summernote').summernote({
            height:250, 
            disable: true
        });
    });
            
</script>
}
